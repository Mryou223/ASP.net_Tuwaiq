@model List<PatientVM>

<h4 class="card-title">
    Patients
</h4>
<div class="d-flex justify-content-between">
    <h6 class="card-subtitle">
        # Patients @Model.Count
    </h6>
    <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">
        New Patient
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">FullName</th>
            <th scope="col">National Id</th>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Age</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model) {
            <tr>
                <td>@p.Id</td>
                <td>@p.FullName</td>
                <td>@p.NationalId</td>
                <td>@p.Email</td>
                <td>@p.PhoneNumber</td>
                <td>@p.DateOfBirth.ToShortDateString()</td>
                <td>@p.Age</td>
                <td>
                    <a asp-controller="Patient" asp-action="Details" asp-route-id="@p.Id" class="btn btn-primary">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


